<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_background_question_list"
        android:minWidth="260dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_form"
        android:paddingTop="@dimen/margin_form"
        tools:context="com.devfie.thoth.basedialog.BaseDialog">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/content"
            fontPath="fonts/Lato-Medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="240dp"
            android:text="@string/hello_blank_fragment"
            android:textColor="@color/dark_text_color"
            android:textSize="16.5sp" />


        <Button
            android:textSize="17.5sp"
            fontPath="fonts/Lato-Bold.ttf"
            android:id="@+id/btnConfirm"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_form"
            android:text="@string/ok"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>


</layout>
